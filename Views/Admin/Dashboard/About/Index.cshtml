    Layout = "_LayoutDashboard";
    ViewData["Title"] = "About";
}

<div id="dashboard-about">
    <section id="about-profile">
        <div class="section-title flex items-end gap-4">
            <h6>Profile</h6>
            <button id="profile-edit" class="text-blue-500">Edit</button>
        </div>
        <div class="card mt-2">
            <form id="profile-form" class="*:mt-4" disable>
                <div class="first:mt-0">
                    <label  class="label">Title:</label>
                    <input type="text" class="input" value="About Me">
                </div>

                <div>
                    <label class="label">Description:</label>
                    <textarea id="summernote">Lorem ipsum dolor sit amet consectetur adipisicing elit. Laboriosam, ex. Enim delectus officiis voluptates placeat quo sunt pariatur dignissimos! Alias impedit blanditiis tempora aperiam consequuntur eveniet pariatur voluptatibus error deleniti!
                    Unde, eum sequi! Distinctio iste voluptates consectetur sint at aliquam ab assumenda quisquam necessitatibus neque, dolorum voluptatem accusamus, aut incidunt, sed nemo non! Distinctio, voluptatibus asperiores! Minima assumenda voluptates magnam?
                    Labore cumque cupiditate ex voluptatibus minima deleniti reiciendis quos corporis nisi dicta, debitis illo quia et aperiam iste, fugiat, officiis atque consequatur ut! Vel labore amet possimus atque odio doloremque!
                    Mollitia in molestias cupiditate tempore nam odit minima, odio at maiores sunt quisquam itaque impedit, dolorem sit voluptates inventore cumque iusto magnam ratione sequi temporibus harum quidem similique voluptate? Modi.
                    </textarea>
                </div>

                <div>
                    <label class="label">Photo:</label>
                    <div class="input">
                        <input type="file" id="profile-photo-input" accept="image/*">
                        <img id="profile-photo" src="~/images/example.jpg" class="w-48 mt-2">
                    </div>
                </div>

                <div>
                    <label class="label">Actions:
                        <button class="text-sm text-blue-500 underline">add</button>
                     </label>
                    <ul>
                        <li class="flex *:grow gap-2">
                            <div>
                                <label class="text-sm">Name:</label>
                                <input type="text" class="input" placeholder="Action name...">
                            </div>
                            <div>
                                <label class="text-sm">Icon:</label>
                                <input type="text" class="input" placeholder="Action icon... <feathericons>">
                            </div>
                            <div>
                                <label class="text-sm">Target:</label>
                                <input type="text" class="input" placeholder="Action target...">
                            </div>
                            <div>
                                <label class="text-sm">Type:</label>
                                <select class="input">
                                    <option value="primary">Primary</option>
                                    <option value="secondary">Secondary</option>
                                    <option value="dark">Dark</option>
                                    <option value="light">Light</option>
                                </select>
                            </div>
                            <button class="self-center last:grow-0 text-sm text-red-500 underline">delete</button>
                        </li>
                    </ul>
                </div>

                <div class="flex justify-center gap-4 last:mt-8 mb-4">
                    <button type="submit" class="button button-dark py-1">Save</button>
                    <button class="button button-light py-1">Cancel</button>
                </div>
            </form>
        </div>
    </section>
</div>

@section Scripts
{
    <script>
        // show profile photo dynamically
        const profilePhoto = document.querySelector("#profile-photo");
        const profilePhotoInput = document.querySelector("#profile-photo-input");

        profilePhotoInput.addEventListener("change", (event) => {
            const file = event.target.files[0];

            if (file) {
                const reader = new FileReader();

                reader.onload = function(e) {
                    profilePhoto.src = e.target.result;
                }

                reader.readAsDataURL(file);
            }
        })
    </script>
}