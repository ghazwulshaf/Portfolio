@{
    var ImageNumber = ViewBag.ImageNumber;
    var ImageUrl = ViewBag.ImageUrl ?? "";
    var ImageValue = ViewBag.ImageValue ?? "";
}

<div id="gallery-image-@ImageNumber"
    data-image-number="@ImageNumber"
    class="relative w-full aspect-video bg-gray-200 bg-cover bg-center"
    style="background-image: url('@ImageUrl');">
    <input type="hidden" name="GalleryFiles[@ImageNumber]" value="@ImageValue">
    <button type="button" class="absolute top-1 right-1 p-0.5 bg-white/30 rounded" onclick="DeleteImage(this)"><i data-feather="x" class="text-red-600 size-5"></i></button>
</div>