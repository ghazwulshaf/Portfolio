@model Project
@{
    var ItemId = ViewBag.ItemId;
    var ItemName = ViewBag.ItemName;
}

<div id="tag-@ItemId">
    <div class="inline-flex items-center gap-2 bg-gray-100 rounded px-2 py-0.5">
        <input type="hidden" name="Tags[@ItemId].Id" value="@(ViewBag.State == "Show" ? Model.Tags[ItemId].Id : null)">
        <input type="hidden" name="Tags[@ItemId].Name" value="@(ViewBag.State == "Show" ? Model.Tags[ItemId].Name : ItemName)">

        <span>@ItemName</span>
        <button type="button" onclick="DeleteTag('tag-@ItemId')">
            <i data-feather="x" class="h-4"></i>
        </button>
    </div>

    @section Scripts
    {
    <script>
        feather.replace();
    </script>
    }
</div>