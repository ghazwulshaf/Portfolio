@model Project
@{
    Project Project = Model;
}

<div class="card bg-white">
    <div class="relative w-full aspect-[16/9] rounded-sm bg-gray-200 bg-cover bg-center"
        style="background-image: url('@Project.Thumbnail');"></div>
    <a asp-controller="Projects" asp-action="Detail" asp-route-id="@Project.Id" class="block mt-4">
        <h6>@Project.Title</h6>
    </a>
    <div class="text-gray-900">
        <small>@Project.Type</small>
    </div>
    <div class="flex gap-2 text-xs mt-4 *:bg-gray-200 *:text-gray-900 *:rounded-sm *:py-1 *:px-2">
    @foreach (var Tag in Project.Tags)
    {
        <div>@Tag.Name</div>
    }
    </div>
</div>