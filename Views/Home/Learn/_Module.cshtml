@model Learn
@{
    Learn Learn = Model;
}

<div class="card bg-white">
    <a href="@Url.Action("Details", "Learn", new { id = Learn.Id })" class="block">
        <div class="relative w-full aspect-[16/9] rounded-sm bg-gray-200 bg-cover bg-center"
            style="background-image: url('@Learn.Thumbnail');"
        ></div>
        <h6 class="mt-4">@Learn.Title</h6>
    </a>
    
    <div class="text-gray-900">
        <small>@Learn.Type</small>
    </div>

    <div class="line-clamp-2 mt-2">@Learn.Description</div>

    <div class="flex gap-2 text-xs mt-4 *:bg-gray-200 *:text-gray-900 *:rounded-sm *:py-1 *:px-2">
    @foreach (var Tag in Learn.Tags)
    {
        <div>@Tag.Name</div>
    }
    </div>
</div>